// tsconfig.json
{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "types": ["node", "react", "react-dom"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2021",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src","scripts","playwright.config.ts","vite.config.ts"],
  "exclude": ["dist","node_modules"]
}

